<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.primointeractive.dsdsremote" version="2.0.13">
<name>DS Remote</name>
<description>DS Remote from Disclosure Services allows candidates and employees to complete a Criminal Record check application, which the employer can then submit via the Disclosure Scotland application process. Disclosure Scotland applications enable employers to access the criminal record history of people working, or seeking to work, in certain positions, especially those that involve working with Children or Adults in specific situations.</description>
<author href="https://www.primointeractive.com/" email="studio@primointeractive.com">Primo Interactive</author>
<preference name="phonegap-version" value="cli-8.0.0" />
<preference name="exit-on-suspend" value="true" />
<plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
<plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
<plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
<preference name="SplashScreenDelay" value="0" />
<preference name="FadeSplashScreenDuration" value="0" />
<preference name="ShowSplashScreen" value="false" />
<icon src="icons/icon.png" />
<icon src="icons/20.png" width="20" height="20" />
<icon src="icons/29.png" width="29" height="29" />
<icon src="icons/40.png" width="40" height="40" />
<icon src="icons/76.png" width="76" height="76" />
<allow-navigation href="https://client.disclosureservices.com/*" />
<access origin="https://client.disclosureservices.com" subdomains="true" />
<access origin="https://code.jquery.com" subdomains="true" />
<access origin="http://pcls1.craftyclicks.co.uk" subdomains="true" />
</widget>
